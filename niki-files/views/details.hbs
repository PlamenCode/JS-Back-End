<h1>{{dataProduct.name}}</h1>
<img class="cube" src="{{dataProduct.imageUrl}}">
<div class="details">
    <p><span>Description:</span> {{dataProduct.description}}</p>
    <p><span>Difficulty level:</span> {{dataProduct.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    {{#if dataProduct.hasOwner}}
        <a class="btn" href="/details/{{dataProduct._id}}/edit">Edit</a>
        <a class="btn" href="/details/{{dataProduct._id}}/delete">Delete</a>
        <a class="btn" href="/attach/accessory/{{dataProduct._id}}">Add Accessory</a>
    {{/if}}
</div>
<h2>Accessories</h2>
{{#if viewAccessory}}
    <div class="accessories">
        {{#each viewAccessory}}
            {{> detailAccessCard}}
        {{/each}}
{{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    </div>
{{/if}}