<h1>Create Accessory</h1>
<div class="form">
    <form action="/create/accessory" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" {{#if body.name}}value="{{body.name}}"{{/if}}>
        <label for="name">Description</label>
        <textarea id="description" name="description">{{#if body.description}}{{body.description}}{{/if}}</textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageUrl" {{#if body.imageUrl}}value="{{body.imageUrl}}"{{/if}}>
        <input type="submit" value="Create">
    </form>
</div>