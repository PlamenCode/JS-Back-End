<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{coin.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{coin.name}}</h1>
            <h3 id="payment">{{coin.payment}}</h3>
            <p id="price"><span>Price: ${{coin.price}}</span></p>
            <p id="description">{{coin.desc}}</p>
        </div>
        <div class="product-btn">
            {{#if user}}
                {{#if isOwner}}
                    <!--Only for registered user and author of the publication -->
                    <div class="author">
                        <a href="/coin/edit/{{coin._id}}" class="btn-edit">Edit</a>
                        <a href="/coin/delete/{{coin._id}}" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                    {{#if hasBought}}
                        <!-- Logged in user who has already buy this crypto-->
                        <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                        <!-- Logged in user who has not yet buy this crypto-->
                        <a href="/coin/buy/{{coin._id}}" class="btn-buy">Buy</a>
                    {{/if}}
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>