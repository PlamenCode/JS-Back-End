<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form action="/coin/edit/{{cryptoData._id}}" method="post">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{cryptoData.name}}">

            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{cryptoData.imageUrl}}">

            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{cryptoData.price}}">

            <label>Description:</label>
            <textarea name="desc"
                id="description">{{cryptoData.desc}}</textarea>

            <label>Payment method:</label>
            <select id="payment" name="payment" value="{{cryptoData.payment}}">
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal" selected>PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>