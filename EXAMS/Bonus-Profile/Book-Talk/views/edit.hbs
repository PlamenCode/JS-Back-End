<section class="edit-form-container">
    <form action="/book/edit/{{id}}" method="post">
        <h3>Edit Book Review</h3>

       <label>Title</label>
        <input type="text" name="title" class="box" value="{{body.title}}">

        <label>Author</label>
        <input type="text" name="author" class="box" value="{{body.author}}">

        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{body.genre}}">

        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{body.stars}}">

        <label>Image</label>
        <input type="text" name="imageUrl" class="box" value="{{body.imageUrl}}">

        <label>Review</label>
        <textarea class="box" name="review">{{body.review}}</textarea>
        
        <input type="submit" value="Edit" class="btn">
    </form>
</section>