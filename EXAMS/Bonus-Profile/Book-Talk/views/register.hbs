<section class="register-form-container">
    <form action="/auth/register" method="post">
        <h3>Register</h3>

        <label>Email</label>
        <input type="email" name="email" class="box" value="{{body.email}}">

        <label>Username</label>
        <input type="text" name="username" class="box" value="{{body.username}}">

        <label>Password</label>
        <input type="password" name="password" class="box" >

        <label>Confirm Password</label>
        <input type="password" name="repass" class="box">
        
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/auth/login">Click here</a></p>
    </form>
</section>